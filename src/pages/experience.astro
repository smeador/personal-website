---
import BaseLayout from "../layouts/BaseLayout.astro";
import Timeline from "../components/experience/Timeline.tsx";
import ExperienceHeader from "../components/experience/ExperienceHeader.tsx";
import SectionTitle from "../components/experience/SectionTitle.tsx";
import OtherExperiences from "../components/experience/OtherExperiences.tsx";
import { getCollection } from "astro:content";

// Fetch experience and education collections
const experienceEntries = await getCollection("experience");
const educationEntries = await getCollection("education");

// Sort by order field
const sortedExperience = experienceEntries.sort(
  (a, b) => a.data.order - b.data.order
);
const sortedEducation = educationEntries.sort(
  (a, b) => a.data.order - b.data.order
);
---

<BaseLayout
  title="Experience - Sean Meador"
  description="Explore my professional journey, technical expertise, and the impact I've made throughout my career in software engineering."
>
  <section class="pt-8 md:pt-2 pb-4 md:pb-12">
    <div class="container mx-auto max-w-5xl px-4">
      <!-- Experience header - matching writing page style -->
      <ExperienceHeader client:load />

      <!-- Professional Timeline -->
      <div class="mb-8 md:mb-12">
        <div class="mb-6">
          <SectionTitle
            className="text-2xl md:text-3xl font-bold text-foreground mb-6"
            animationDelay={0.2}
            client:load
          >
            Professional
          </SectionTitle>
        </div>

        <Timeline
          items={sortedExperience}
          type="experience"
          animationDelay={0.2}
          client:load
        />
      </div>

      <!-- Education Timeline -->
      <div class="mb-8 md:mb-12">
        <div class="mb-6">
          <SectionTitle
            className="text-2xl md:text-3xl font-bold text-foreground mb-6"
            animationDelay={0.4}
            client:load
          >
            Education
          </SectionTitle>
        </div>

        <Timeline
          items={sortedEducation}
          type="education"
          animationDelay={0.4}
          client:load
        />
      </div>

      <!-- Other Notable Experiences -->
      <div class="mb-8 md:mb-12">
        <div class="mb-6">
          <SectionTitle
            className="text-2xl md:text-3xl font-bold text-foreground mb-6"
            animationDelay={0.6}
            client:load
          >
            Other
          </SectionTitle>
        </div>

        <OtherExperiences animationDelay={0.6} client:load />
      </div>
    </div>
  </section>
</BaseLayout>
