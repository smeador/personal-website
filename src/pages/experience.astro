---
import BaseLayout from "../layouts/BaseLayout.astro";
import Timeline from "../components/experience/Timeline.tsx";
import DownloadIcon from "../components/icons/DownloadIcon.tsx";
import { getCollection } from "astro:content";

// Fetch experience and education collections
const experienceEntries = await getCollection("experience");
const educationEntries = await getCollection("education");

// Sort by order field
const sortedExperience = experienceEntries.sort((a, b) => a.data.order - b.data.order);
const sortedEducation = educationEntries.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout
  title="Experience - Sean Meador"
  description="Explore my professional journey, technical expertise, and the impact I've made throughout my career in software engineering."
>
  <section class="pt-8 md:pt-2 pb-20">
    <div class="container mx-auto max-w-5xl px-4">
      <!-- Experience header - matching writing page style -->
      <div class="mt-2 md:mt-8">
        <div
          class="flex flex-col md:flex-row md:justify-between md:items-center mb-4 md:mb-6"
        >
          <div class="flex-1">
            <h1 class="section-title mb-4 md:mb-0">experience.</h1>
          </div>
          <div class="hidden md:block md:ml-8">
            <a
              href="/resume.pdf"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium text-sm"
            >
              <DownloadIcon />
              Resume
            </a>
          </div>
        </div>
        <p
          class="text-lg md:text-xl text-muted-foreground leading-relaxed font-medium mb-6"
        >
          My professional journey in software engineering, from early career
          foundations to leading complex technical initiatives.
        </p>

        <!-- Mobile resume button - below summary -->
        <div class="md:hidden mb-8 md:mb-10">
          <a
            href="/resume.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium text-sm"
          >
            <DownloadIcon />
            Resume
          </a>
        </div>
      </div>

      <!-- Professional Timeline -->
      <div class="mb-16">
        <div class="mb-6">
          <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-6">
            Professional
          </h2>
        </div>

        <Timeline items={sortedExperience} type="experience" client:load />
      </div>

      <!-- Education Timeline -->
      <div class="mb-16">
        <div class="mb-6">
          <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-6">
            Education
          </h2>
        </div>

        <Timeline items={sortedEducation} type="education" client:load />
      </div>
    </div>
  </section>
</BaseLayout>
