---
import BaseLayout from "../layouts/BaseLayout.astro";
import AboutSection from "../components/about/AboutSection.tsx";
---

<BaseLayout
  title="About - Sean Meador"
  description="Learn more about Sean Meador's journey as an engineering leader, passion for technology, and approach to building high-performing teams."
>
  <section class="pt-8 md:pt-2 pb-20">
    <div class="container mx-auto max-w-5xl px-4">
      <AboutSection client:load />
    </div>
  </section>

  <!-- Clean gradient background -->
  <div
    class="fixed inset-0 -z-10 bg-gradient-to-br from-peach/10 via-cream/5 to-blue/8 pointer-events-none"
  >
  </div>
</BaseLayout>
