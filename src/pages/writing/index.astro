---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all articles and sort by date (newest first)
const allArticles = await getCollection('articles');
const sortedArticles = allArticles.sort((a, b) => 
  b.data.date.getTime() - a.data.date.getTime()
);
---

<BaseLayout 
  title="Writing - Sean Meador" 
  description="Explore my thoughts on technology, development, and the digital world through in-depth articles and insights."
>
  <section class="pt-8 md:pt-2 pb-20">
    <div class="container mx-auto max-w-5xl px-4">
      
      <!-- Writing header - matching home page style -->
      <div class="mt-2 md:mt-8">
        <h1 class="section-title mb-4 md:mb-6">writing.</h1>
        <p class="text-lg md:text-xl text-muted-foreground leading-relaxed font-medium mb-8 md:mb-10">
          Thoughts on engineering leadership, technology, and building teams that create meaningful software.
        </p>
      </div>

      <!-- Article list -->
      <div class="space-y-6">
        {sortedArticles.map((article) => (
          <article class="group">
            <a 
              href={`/writing/${article.slug}`}
              class="block w-full p-6 bg-card border border-border rounded-lg hover:shadow-lg hover:border-coral/20 transition-all duration-300"
            >
              <div class="flex flex-col space-y-3">
                <h2 class="text-xl md:text-2xl font-semibold text-foreground group-hover:text-coral transition-colors">
                  {article.data.title}
                </h2>
                <time 
                  datetime={article.data.date.toISOString()}
                  class="text-sm text-muted-foreground"
                >
                  {article.data.date.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
                <p class="text-muted-foreground leading-relaxed">
                  {article.data.excerpt}
                </p>
              </div>
            </a>
          </article>
        ))}
        
        {sortedArticles.length === 0 && (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">üìù</div>
            <h3 class="text-xl font-semibold text-foreground mb-2">
              No articles yet
            </h3>
            <p class="text-muted-foreground">
              Articles will appear here once they're published.
            </p>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>