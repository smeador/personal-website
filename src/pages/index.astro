---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/home/Hero.tsx";
import About from "../components/home/About.tsx";
import Connect from "../components/home/Connect.tsx";
---

<BaseLayout
  title="Home - Sean Meador"
  description="Software engineer and writer passionate about building elegant web applications and exploring the intersection of technology and human experience."
>
  <!-- Hero, About, and Connect sections -->
  <section class="pt-8 md:pt-2 pb-20">
    <div class="container mx-auto max-w-5xl px-4">
      <Hero client:load />
      <About client:load />
      <Connect client:load />
    </div>
  </section>

  <!-- Clean gradient background -->
  <div
    class="fixed inset-0 -z-10 bg-gradient-to-br from-peach/10 via-cream/5 to-blue/8 pointer-events-none"
  >
  </div>
</BaseLayout>
