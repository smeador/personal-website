---
const currentPath = Astro.url.pathname;
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border"
>
  <nav
    class="container mx-auto max-w-5xl px-4 h-16 flex items-center justify-between"
  >
    <!-- Logo/Name -->
    <a
      href="/"
      class="custom-header-name text-foreground hover:text-primary transition-colors"
      style="color: inherit; text-decoration: none; -webkit-tap-highlight-color: transparent;"
    >
      sean meador
    </a>

    <!-- Navigation Links - Desktop -->
    <div class="hidden md:flex items-center space-x-8">
      <a
        href="/"
        class={`text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/" ? "text-primary" : "text-muted-foreground"
        }`}
      >
        Home
      </a>
      <a
        href="/about"
        class={`text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/about"
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        About
      </a>
      <a
        href="/experience"
        class={`text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/experience"
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        Experience
      </a>
      <a
        href="/writing"
        class={`text-sm font-medium transition-colors hover:text-primary ${
          currentPath.startsWith("/writing")
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        Writing
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      type="button"
      class="md:hidden p-2 text-muted-foreground hover:text-primary transition-colors bg-transparent active:bg-transparent focus:bg-transparent focus:outline-none focus:ring-0 select-none"
      id="mobile-menu-button"
      aria-label="Toggle mobile menu"
      style="color: inherit; appearance: none; background-color: transparent; -webkit-tap-highlight-color: transparent; -webkit-appearance: none;"
    >
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden border-t border-border bg-background/95 backdrop-blur-md overflow-hidden transition-all duration-300 ease-out"
  >
    <div class="container mx-auto max-w-5xl px-4 py-4 space-y-2">
      <a
        href="/"
        class={`block py-3 text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/" ? "text-primary" : "text-muted-foreground"
        }`}
      >
        Home
      </a>
      <a
        href="/about"
        class={`block py-3 text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/about"
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        About
      </a>
      <a
        href="/experience"
        class={`block py-3 text-sm font-medium transition-colors hover:text-primary ${
          currentPath === "/experience"
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        Experience
      </a>
      <a
        href="/writing"
        class={`block py-3 text-sm font-medium transition-colors hover:text-primary ${
          currentPath.startsWith("/writing")
            ? "text-primary"
            : "text-muted-foreground"
        }`}
      >
        Writing
      </a>
    </div>
  </div>
</header>

<script>
  function initMobileMenu() {
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    if (!button || !menu) return;

    // Always reset menu to closed state on navigation
    menu.classList.add("hidden");
    menu.style.maxHeight = "";
    menu.style.opacity = "";

    // Only attach listeners once per DOM element (handles transition:persist)
    if (button.dataset.menuInit) return;
    button.dataset.menuInit = "true";

    function openMenu() {
      menu.classList.remove("hidden");
      menu.style.maxHeight = "0px";
      menu.style.opacity = "0";

      // Force reflow
      menu.offsetHeight;

      menu.style.maxHeight = menu.scrollHeight + "px";
      menu.style.opacity = "1";
      button.dataset.menuOpen = "true";
    }

    function closeMenu() {
      menu.style.maxHeight = "0px";
      menu.style.opacity = "0";

      setTimeout(() => {
        menu.classList.add("hidden");
        button.dataset.menuOpen = "false";
      }, 300);
    }

    button.addEventListener("click", () => {
      if (button.dataset.menuOpen === "true") {
        closeMenu();
      } else {
        openMenu();
      }
    });

    document.addEventListener("click", (e) => {
      if (
        button.dataset.menuOpen === "true" &&
        !button.contains(e.target as Node) &&
        !menu.contains(e.target as Node)
      ) {
        closeMenu();
      }
    });
  }

  // Run on initial load and after every client-side navigation
  document.addEventListener("astro:page-load", initMobileMenu);
</script>
