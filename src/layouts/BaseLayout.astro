---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Personal website with my info, writing, and professional experience",
} = Astro.props;

// Get the current URL to help with favicon base path
const currentURL = new URL(Astro.request.url);
const isProduction = import.meta.env.PROD;
const baseURL = isProduction ? 'https://meador.me' : `${currentURL.protocol}//${currentURL.host}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- Favicons for all browsers -->
    <link rel="shortcut icon" href={`${baseURL}/favicon.ico`} />
    <link rel="icon" href={`${baseURL}/favicons/favicon.ico`} sizes="any" />
    <link rel="icon" type="image/svg+xml" href={`${baseURL}/favicons/favicon.svg`} />
    <link rel="apple-touch-icon" href={`${baseURL}/favicons/apple-touch-icon.png`} />
    <link rel="manifest" href={`${baseURL}/site.webmanifest`} />

    <!-- Mobile Safari specific -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Sean Meador - Personal Website" />
    <meta name="msapplication-TileColor" content="#faf8f6" />
    <meta name="theme-color" content="#faf8f6" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content={Astro.url} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.png" />

    <!-- Global Styles are now imported in the frontmatter -->
  </head>
  <body>
    <main class="min-h-screen bg-background">
      <Header />
      <div class="pt-16">
        <!-- Account for fixed header height -->
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
